{
  "name": "html-mutation-testing",
  "version": "0.0.1",
  "description": "Tooling for mutation testing basic html pages",
  "main": "index.js",
  "scripts": {
    "start-server": "forever start ./src/webServer.js",
    "stop-server": "forever stopall",
    "test": "mocha './test/**/*.js'",
    "mutation-test": "stryker run",
    "before-test-e2e": "npm run start-server",
    "during-test-e2e": "testcafe firefox test/e2e/",
    "after-test-e2e": "npm run stop-server",
    "test-e2e": "npm-run-all --continue-on-error before-test-e2e during-test-e2e after-test-e2e",
    "mutation-test-e2e": "stryker run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Grunet/html-mutation-testing.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Grunet/html-mutation-testing/issues"
  },
  "homepage": "https://github.com/Grunet/html-mutation-testing#readme",
  "devDependencies": {
    "@stryker-mutator/core": "^3.3.1",
    "@stryker-mutator/javascript-mutator": "^3.3.1",
    "express": "^4.17.1",
    "fkill-cli": "^6.0.1",
    "forever": "^3.0.0",
    "mocha": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "testcafe": "^1.8.8"
  }
}
